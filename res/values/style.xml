<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- material edit text input -->
    <style name="customEditTextLineColor" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/divider</item>
        <item name="android:textColorHint">@color/color_hint_text</item>
    </style>

    <!-- material edit text input -->
    <style name="customEditTextHint" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_size_caption</item>
    </style>

    <style name="ButtonNext">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">@dimen/font_size_caption</item>
        <item name="android:textColor">@color/main_btn_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_bg</item>
    </style>

    <style name="TextViewCancel">
        <item name="android:textColor">@color/master</item>
        <item name="android:textSize">@dimen/font_size_caption</item>
    </style>

    <!-- custom progress dialog -->
    <style name="CustomProgressDialogStyle" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">#BBC0C0C0</item>
    </style>

    <style name="TranslucentDialog" parent="@android:style/Theme.Dialog">
        <item name = "android:windowBackground">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
    </style>

</resources>